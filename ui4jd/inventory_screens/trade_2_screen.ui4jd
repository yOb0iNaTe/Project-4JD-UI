        "cell_image_red@ui_4jd_textures.cell_image_red_1_5": {
          "layer": 3,
          "bindings": [
            {
              "binding_type": "collection_details"
            },
            {
              "binding_name": "(not #trade_possible)",
              "binding_name_override": "#visible"
            }
