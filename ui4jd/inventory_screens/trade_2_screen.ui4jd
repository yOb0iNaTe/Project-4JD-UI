      {
        "cell_image_red@ui_4jd_textures.cell_image_red_1_5": {
          "layer": 4,
          "size": [ 27, 27 ],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "offset": [ -9, 49 ],
