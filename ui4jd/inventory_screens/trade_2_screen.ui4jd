        }
      },
      {
        "warning_icon@ui_4jd_textures.warning_icon": {
          "layer": 7,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 1.5, 1.5 ],
          "bindings": [
            {
              "binding_type": "collection_details"
            },
            {
              "binding_name": "(not #trade_possible)",
